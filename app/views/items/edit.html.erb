<h4>Edit Item</h4>
<br>
<div id=create_item>
  <%= form_with url: item_path(@item), method: :patch, local: true do |form| %>
  <div class="mb-3 row">
    <%= form.label :name, "Name:" %>
    <div class="col-sm-10">
      <%= form.text_field :name , value: @item.name %>
    </div><br>
      <%= form.label :description, "Description:" %>
    <div class="col-sm-10">
      <%= form.text_field :description, value: @item.description %>
    </div><br>
      <%= form.label :quantity, "Quantity:" %>
    <div class="col-sm-10">
      <%= form.text_field :quantity, value: @item.quantity %>
    </div><br>
    <div class="col-sm-10">
      <%= form.radio_button :status, 'In stock', checked: true %>
      <%= form.label :status, 'In Stock' %>
      <%= form.radio_button :status, 'Out of stock' %>
      <%= form.label :status, 'Out of Stock' %>    
   </div><br>
    <div class="col-sm-10">
      <%= form.submit 'Update Item' %>
    </div><br>
  <% end %>
</div>